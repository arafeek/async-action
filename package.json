{
  "name": "@wealthsimple/async-action",
  "version": "4.1.0",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "lint:js": "eslint 'src/*'",
    "lint:css": "echo 'No CSS in this repo.'",
    "security": "yarn audit",
    "test": "jest --coverage",
    "test:ci": "jest --coverage --runInBand",
    "test:coverage": "jest --coverage --runInBand --reporters=jest-junit --coverageReporters=text-lcov | coveralls",
    "test:watch": "jest --watch",
    "prettier": "prettier --write './+(src)/**/*.js'",
    "cdc": "madge --no-spinner --exclude .yarn-cache --circular src",
    "prebuild": "rm -rf dist",
    "build": "tsc --outDir dist",
    "prepublishOnly": "yarn lint:js && yarn test && yarn cdc && yarn build"
  },
  "author": "sdavenport@wealthsimple.com",
  "license": "MIT",
  "devDependencies": {
    "@semantic-release/git": "^7.0.16",
    "@types/jest": "^24.0.23",
    "@typescript-eslint/eslint-plugin": "^2.11.0",
    "@typescript-eslint/parser": "^2.11.0",
    "coveralls": "^3.0.3",
    "eslint": "^6.7.2",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "flow-bin": "^0.97.0",
    "flow-typed": "^2.5.1",
    "husky": "^3.0.4",
    "jest": "^24.7.1",
    "jest-junit": "^8.0.0",
    "madge": "^3.4.4",
    "prettier": "^1.17.0",
    "pretty-quick": "^1.10.0",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0",
    "semantic-release": "^15.13.27",
    "typescript": "^3.7.3"
  },
  "resolutions": {
    "handlebars": "^4.1.2",
    "mixin-deep": "^1.3.2",
    "https-proxy-agent": "^3.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/jest/load-libs.js"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/.yarn-cache/"
    ],
    "collectCoverageFrom": [
      "**/src/**/*.js"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text-summary",
      "html"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "npmPublish": true
        }
      ],
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
